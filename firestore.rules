rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // CUIDADO: Estas regras são inseguras e servem apenas para desenvolvimento.
      // Elas permitem acesso público a todo o seu banco de dados.
      // Você deve implementar autenticação e regras de segurança adequadas antes da produção.
      allow read, write: if true;
    }
  }
}
